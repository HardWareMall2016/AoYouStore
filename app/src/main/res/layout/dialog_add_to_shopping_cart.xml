<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="16dp"
    android:orientation="vertical">

    <RelativeLayout
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="购买数量"
            android:textColor="@color/text_color_title"
            android:textSize="@dimen/text_size_normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/minus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_gray_selector"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/text_color_content"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/tvNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="1"
                android:textColor="@color/text_color_title"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_gray_selector"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/text_color_content"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_add"
        style="@style/text_white_bg_blue_btn_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="添加"
        android:textSize="@dimen/text_size_large" />
    <Button
        android:id="@+id/btn_add_and_view"
        style="@style/text_white_bg_blue_btn_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="添加并查看购物车"
        android:textSize="@dimen/text_size_large" />
    <Button
        android:id="@+id/btn_cancel"
        style="@style/text_white_bg_blue_btn_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/bg_red_rounded_selector"
        android:layout_marginTop="16dp"
        android:text="取消"
        android:textSize="@dimen/text_size_large" />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/register_message_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:background="@drawable/bg_white_rounded_with_border_selector"
            android:gravity="center_vertical"
            android:hint="请输入手机号"
            android:inputType="number"
            android:minHeight="@dimen/min_item_height"
            android:paddingLeft="16dp"
            android:singleLine="true"
            android:textSize="16sp" />

        <com.zhan.framework.ui.widget.RippleButton
            android:id="@+id/register_phone_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/transparent"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/text_color_content" />
    </LinearLayout>
    <EditText
        android:id="@+id/register_message_code"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_white_rounded_with_border_selector"
        android:gravity="center_vertical"
        android:hint="短信验证码（请输入默认8888）"
        android:minHeight="@dimen/min_item_height"
        android:inputType="number"
        android:paddingLeft="16dp"
        android:singleLine="true"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/register_psword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_white_rounded_with_border_selector"
        android:gravity="center_vertical"
        android:hint="密码"
        android:minHeight="@dimen/min_item_height"
        android:paddingLeft="16dp"
        android:singleLine="true"
        android:textSize="16sp" />

    <com.zhan.framework.ui.widget.RippleButton
        android:id="@+id/btn_next"
        style="@style/text_white_bg_blue_btn_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:text="注册"
        android:textSize="@dimen/text_size_large"
        ripple:rv_type="rectangle"
        ripple:rv_zoom="true" />
</LinearLayout>
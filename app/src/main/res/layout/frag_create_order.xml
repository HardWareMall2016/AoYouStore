<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/address_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/divider_color"
                android:gravity="center_vertical"
                android:minHeight="40dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="收货信息"
                android:textColor="@color/text_color_title"
                android:textSize="@dimen/text_size_large" />

            <RelativeLayout
                android:id="@+id/address_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_underline_selector"
                android:paddingBottom="16dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="16dp">

                <TextView
                    android:id="@+id/consignee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货人:王二"
                    android:textColor="@color/text_color_title"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:text="123456789012"
                    android:textColor="@color/text_color_title"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/address"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/consignee"
                    android:layout_marginTop="8dp"
                    android:drawableEnd="@drawable/arrow_right_small"
                    android:drawableRight="@drawable/arrow_right_small"
                    android:text="收货地址:"
                    android:textColor="@color/text_color_title"
                    android:textSize="@dimen/text_size_small" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/order_people_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_white_underline_selector"
                android:minHeight="48dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <TextView
                    android:id="@+id/order_people_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="下单人:请填写"
                    android:textColor="@color/text_color_title"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/order_people_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableEnd="@drawable/arrow_right_small"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/arrow_right_small"
                    android:text="电话:请填写"
                    android:textColor="@color/text_color_title"
                    android:textSize="@dimen/text_size_normal" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/delivery_way_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_underline_selector"
                android:minHeight="48dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="送货方式："
                    android:textColor="@color/text_color_title"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/delivery_way"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableEnd="@drawable/arrow_right_small"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/arrow_right_small"
                    android:text="请选择"
                    android:textColor="@color/text_color_title"
                    android:textSize="@dimen/text_size_normal" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pay_way_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_underline_selector"
                android:minHeight="48dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="支付方式："
                    android:textColor="@color/text_color_title"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/pay_way"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableEnd="@drawable/arrow_right_small"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/arrow_right_small"
                    android:text="请选择"
                    android:textColor="@color/text_color_title"
                    android:textSize="@dimen/text_size_normal" />
            </RelativeLayout>

            <EditText
                android:id="@+id/order_remarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_white_rounded_with_border_selector"
                android:gravity="top"
                android:textColor="@color/text_color_title"
                android:textSize="@dimen/text_size_normal"
                android:hint="订单备注"
                android:minHeight="90dp"
                android:padding="8dp" />

            <RelativeLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_underline_selector"
                android:minHeight="48dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="商品货款："
                    android:textColor="@color/text_color_title"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/goods_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="￥0.00"
                    android:textColor="#FF5001"
                    android:textSize="@dimen/text_size_normal" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_underline_selector"
                android:minHeight="48dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="运费："
                    android:textColor="@color/text_color_title"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/shipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="￥0.00"
                    android:textColor="#FF5001"
                    android:textSize="@dimen/text_size_normal" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#B3B3B3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#F5F5F5"
        android:gravity="center_vertical|end"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="合计:"
            android:textColor="@color/text_color_title"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/totalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="￥2849.9"
            android:textColor="#FF5001"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/submit"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_orange_selector"
            android:gravity="center"
            android:text="提交订单"
            android:textColor="@color/text_color_white_selector"
            android:textSize="@dimen/text_size_normal" />

    </LinearLayout>

</LinearLayout>